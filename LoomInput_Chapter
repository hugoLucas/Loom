STORY{
    TITLE:"my_first_adventure"

    SECTION[START]:$p_one
}

SECTION{
    TITLE:"beginning"[$p_one]

    c_one:$ch_one
    c_two:$ch_two

    CHAPTER[START]:c_one
    CHAPTER[END]:c_two

    LINK[c_one->c_two]
}

CHAPTER{
    TITLE:"oregon"[$ch_two]

    five:$pg_five
    six:$pg_six

    PAGE[START]:five
    PAGE[END]:six

    LINK[five.$e][six]
}

CHAPTER{
    TITLE:"darkness"[$ch_one]

    one:$pg_one
    two:$pg_two
    three:$pg_three
    four:$pg_four

    PAGE[START]:one
    PAGE:two
    PAGE:three
    PAGE[END]:four

    LINK[one.$a][two]
    LINK[one.$b][three]
    LINK[two.$c][four]
    LINK[three.$d][four]
}

PAGE{
    TITLE:"page_one"[$pg_one]

    TEXT:"you are in a dark room"

    OPTION[$a]:"do nothing"
    OPTION[$b]:"check pockets"
}

PAGE{
    TITLE:"page_two"[$pg_two]

    TEXT:"there is a sound in the distance"

    OPTION[$c]:"head towards the sound"
}

PAGE{
    TITLE:"page_three"[$pg_three]

    TEXT:"you find a digital watch"

    OPTION[$d]:"check the time"
}

PAGE{
    TITLE:"page_four"[$pg_four]

    TEXT:"you feel a hand on your back"
}

PAGE{
    TITLE:"page_five"[$pg_five]

    TEXT:"you pack your wagon"

    OPTION[$e]:"walk east"
}

PAGE{
    TITLE:"page_six"[$pg_six]

    TEXT:"you have caught dysentery"
}